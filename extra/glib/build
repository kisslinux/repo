#!/bin/sh -e

# Remove 'libelf' dependency.
sed -i'' 's/if have_libelf/if not have_libelf/' gio/meson.build

meson \
    --prefix=/usr \
    -Dman=false \
    -Dfam=false \
    -Dnls=disabled \
    . build

ninja -C build
DESTDIR="$1" ninja -C build install

# Remove unneeded files.
rm -rf "$1/usr/share/gettext"

# Purge gdbus.
rm -rf "$1/usr/bin/gdbus"
